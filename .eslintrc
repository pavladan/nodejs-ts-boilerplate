{
  "parser": "@typescript-eslint/parser",
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "max-len": [
      "error",
      {
        "code": 150
      }
    ],
    "max-lines": "error",
    "max-params": "error",
    "max-depth": "error",
    "prettier/prettier": "warn",
    "@typescript-eslint/no-var-requires": "off"
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2021
  },
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  }
}
